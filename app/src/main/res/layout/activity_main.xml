<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:paddingBottom="10px"
                android:text="WELCOME"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="55dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="text"
                android:text="Sample_guy"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hardwareid" />

            <EditText
                android:id="@+id/age"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="12"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/age"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="M"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age" />

            <EditText
                android:id="@+id/currSmoker"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/gender"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Yes"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender" />

            <EditText
                android:id="@+id/cigsPerDay"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/currSmoker"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="5"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currSmoker" />

            <EditText
                android:id="@+id/bpMeds"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/cigsPerDay"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Yes"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cigsPerDay" />

            <EditText
                android:id="@+id/prevStroke"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/bpMeds"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Yes"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bpMeds" />

            <EditText
                android:id="@+id/prevHyp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/prevStroke"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="No"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prevStroke" />

            <EditText
                android:id="@+id/diab"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/prevHyp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="No"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prevHyp" />

            <EditText
                android:id="@+id/totchol"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/diab"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="13.6"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diab" />

            <EditText
                android:id="@+id/height"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="170"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totchol" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="62"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/height" />

            <EditText
                android:id="@+id/glucose"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="56"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight" />

            <EditText
                android:id="@+id/tenYearCHD"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="No"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glucose" />

            <Button
                android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="100dp"
                android:text="REGISTER"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tenYearCHD"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:text="Age"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/age"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0px"
                android:paddingLeft="10dp"
                android:text="Gender(M/F)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Smoking Habit(Yes/No)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/currSmoker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Cigarettes Per Day"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cigsPerDay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currSmoker"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="BP Medication(Yes/No)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/bpMeds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cigsPerDay"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Ever got stroke(Yes/No)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/prevStroke"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bpMeds"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginTop="214dp"
                android:text="Hypertension(Yes/No)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/prevHyp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/prevStroke"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Diabetes(Yes/No)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/diab"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prevHyp"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Total Cholesterol"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/totchol"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diab"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Height(in cms)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totchol"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Weight(in kgs)"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/weight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/height"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Glucose"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/glucose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Ten Year CHD"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tenYearCHD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glucose"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/hardwareid"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="171dp"
                android:background="#e1e4e8"
                android:ems="10"
                android:inputType="number"
                android:text="13"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Hardware ID"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/hardwareid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>